<h2 class="headline">タスク追加</h2>

<div class="container">
  <div class="error">
    <% if @task.errors.any? %>
    <h2 class="error_message">
      <%= @task.errors.count %>件のエラーが発生しました。
    </h2>

      <div class="errors">
        <ul>
          <% @task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
  <% end %>
  </div>

  <%= form_with model: @task do |f| %>

  <table clas="new_task">
    <tr>
      <td class="width20">タスク名</td>
      <td class="width80">
        <div class="form-group">
          <label for="task_name"></label>
          <%= f.text_field :name %>
        </div>
      </td>
    </tr>
    <tr align='center'>
      <td class="width20">開始</td>
      <td class="width80">
        <div class="form-group">
          <label for="start"></label>
          <%= f.date_field :start, class:"order-date-form", min: Date.current %>
        </div>
      </td>
    </tr>
    <tr align='center'>
      <td class="width20">期限</td>
      <td class="width80">
        <div class="form-group">
          <label for="limit"></label>
          <%= f.date_field :limit, class:"order-date-form", min: Date.current %>
        </div>
      </td>
    </tr>
    <tr align='center'>
      <td class="width20">ご褒美</td>
      <td class="width80">
        <div class="form-group">
          <label for="present"></label>
          <%= f.text_field :present %>
        </div>
      </td>
    </tr>
    <tr align='center'>
      <td class="width20">メモ</td>
      <td class="width80">
        <div class="form-group">
          <label for="limit"></label>
          <%= f.text_field :note%><br />
          <%= f.file_field :image, accept: "image/*" %>
        </div>
      </td>
    </tr>
  </table>

  <div class="field">
    <%= f.submit "タスク追加", class: "btn btn-info" %>
  </div>

  <% end %>
</div>
